doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title PARM | Página de Registro
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    link(rel='stylesheet', href='../../bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css')
    link(rel='stylesheet', href='../../dist/css/AdminLTE.min.css')
    link(rel='stylesheet', href='../../plugins/iCheck/square/blue.css')
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.hold-transition.register-page
    .register-box
      .register-logo
          | Registro de PARM
      .register-box-body
        p.login-box-msg Registrar una nueva cuenta
        form(action='/registro', method='post')
          .form-group.has-feedback
            input.form-control(type='text', placeholder='RUC *',name='ruc')
            span.glyphicon.glyphicon-briefcase.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Razón Social *',name='razonsocial')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='email', placeholder='Correo electrónico *',name='email')
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Dirección *',name='direccion')
            span.glyphicon.glyphicon-map-marker.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Teléfono *',name='telefono')
            span.glyphicon.glyphicon-phone-alt.form-control-feedback
          hr
          .form-group.has-feedback
            input.form-control(type='password', placeholder='Contraseña',name="contrasena")
            span.glyphicon.glyphicon-lock.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password', placeholder='Confirmar contraseña',name="confirmarcontrasena")
            span.glyphicon.glyphicon-log-in.form-control-feedback
          hr
          | Datos de contacto 1
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Nombres *',name='contacto1nombres')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Apellidos *',name='contacto1apellidos')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Correo electrónico *',name='contacto1email')
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Teléfono de contacto *',name='contacto1telefono')
            span.glyphicon.glyphicon-phone-alt.form-control-feedback
          | Datos de Contacto 2
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Nombres',name='contacto2nombres')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Apellidos',name='contacto2apellidos')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Correo electrónico',name='contacto2email')
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Teléfono de contacto',name='contacto2telefono')
            span.glyphicon.glyphicon-phone-alt.form-control-feedback
          hr
          .row
            .col-xs-7
              .checkbox.icheck
                label
                  input(type='checkbox')
                  |  Acepto los 
                  a(href='#') términos
            .col-xs-5
              button.btn.btn-primary.btn-block.btn-flat(type='submit') Registrarme
        |  
        a.text-center(href='/') Ya tengo una cuenta

    script(src='../../plugins/jQuery/jquery-2.2.3.min.js')
    script(src='../../bootstrap/js/bootstrap.min.js')
    script(src='../../plugins/iCheck/icheck.min.js')
    script.
      $(function () {
      $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
      });
      });
